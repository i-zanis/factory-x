<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Default Spring Boot logging configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Property to capture the Spring application name -->
    <springProperty scope="context" name="springAppName"
                    source="spring.application.name"/>

    <!-- Pattern for console logging -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <!-- JSON format appender for console logging -->
    <appender name="jsonConsole" class="ch.qos.logback.core.ConsoleAppender">
        <encoder
                class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <version/>
                <logLevel/>
                <message/>
                <loggerName/>
                <threadName/>
                <context/>
                <!-- Custom JSON pattern for structured logging -->
                <pattern>
                    <omitEmptyFields>true</omitEmptyFields>
                    <pattern>
                        {"severity": "%level", "service": "${springAppName:-}",
                        "trace": "%X{X-B3-TraceId:-}", "span":
                        "%X{X-B3-SpanId:-}", "parent":
                        "%X{X-B3-ParentSpanId:-}", "exportable":
                        "%X{X-Span-Export:-}", "baggage": "%X{key:-}", "pid":
                        "${PID:-}", "thread": "%thread", "class": "%logger{40}",
                        "rest": "%message"}
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="jsonConsole"/>
    </root>
</configuration>